<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeContactList" parent="AppTheme.AppBarOverlay">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeContactListAppBar" parent="AppTheme.AppBarOverlay">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeContactListToolbar" parent="AppTheme.AppBarOverlay">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppThemeFastScroller" parent="AppTheme.AppBarOverlay">
        <!-- Customize your theme here. -->
        <item name="fastscroll__bubbleColor">#000</item>
        <item name="fastscroll__handleColor">#000</item>
    </style>

</resources>