<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@drawable/fieldset_gris"
    style="?android:attr/buttonStyleSmall"
    android:layout_marginTop="5dp"
    android:onClick="onShowFacturier">

    <ImageView
        android:layout_width="@dimen/_47sdp"
        android:layout_height="match_parent"
        android:id="@+id/icon"
        android:layout_marginLeft="0dp"
        android:src="@drawable/ic_action_account_balance_wallet"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/go"
        android:layout_toEndOf="@+id/icon"
        android:gravity="center"
        android:paddingLeft="@dimen/_10sdp"
        android:text="Facturier"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#5F5F5F"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/go"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/_46sdp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_navigation_chevron_right" />

</RelativeLayout>