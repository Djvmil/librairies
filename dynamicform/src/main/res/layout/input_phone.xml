<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/_35sdp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:weightSum="3">

    <com.hbb20.CountryCodePicker
        android:id="@+id/indicatif"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_weight="1"
        app:ccpDialog_allowSearch="false"
        app:ccp_autoDetectCountry="true"
        app:ccp_autoDetectLanguage="true"
        app:ccp_countryAutoDetectionPref="SIM_ONLY"
        app:ccp_countryPreference="BF"
        app:ccp_customMasterCountries="SN,BF,ML,BJ,GH,GN,CI,MR,NG,TG,"
        app:ccp_defaultNameCode="BF"
        app:ccp_hintExampleNumber="true"
        app:ccp_showNameCode="false"
        android:textSize="@dimen/_14sdp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:imeOptions="actionNext"
        android:fontFamily="@font/exo"
        android:textSize="@dimen/_14sdp"
        android:hint="Numéro téléphone"
        android:inputType="textCapWords|textCapCharacters|textNoSuggestions" />

    <ImageView
        android:id="@+id/contacts"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30ssp"
        android:layout_weight="2"
        android:src="@drawable/ic_contacts_black_24dp"
        android:padding="@dimen/_2ssp"
        android:clickable="true"  />
</LinearLayout>